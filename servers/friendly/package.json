{
  "name": "@niney-life-pickr/friendly-server",
  "version": "1.0.0",
  "description": "Niney Life Pickr Friendly Server - Node.js Backend Service",
  "main": "dist/server.js",
  "scripts": {
    "dev": "nodemon src/server.ts",
    "dev:clean": "npm run kill && npm run dev",
    "build": "tsc",
    "start": "node dist/server.js",
    "start:prod": "NODE_ENV=production node dist/server.js",
    "clean": "rm -rf dist",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "type-check": "tsc --noEmit",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest run --coverage",
    "test:integration": "vitest run src/__tests__/integration",
    "test:unit": "vitest run src/__tests__/unit",
    "test:auth": "vitest run src/__tests__/integration/auth.routes.test.ts",
    "test:crawler": "vitest run src/__tests__/integration/crawler.routes.test.ts",
    "db:reset": "node scripts/db-reset.js",
    "kill": "node scripts/kill.js"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "commonjs",
  "dependencies": {
    "@fastify/cors": "^11.1.0",
    "@fastify/helmet": "^13.0.1",
    "@fastify/sensible": "^6.0.3",
    "@fastify/swagger": "^9.5.1",
    "@fastify/swagger-ui": "^5.2.3",
    "@fastify/type-provider-typebox": "^5.2.0",
    "@scalar/fastify-api-reference": "^1.35.3",
    "@sinclair/typebox": "^0.34.41",
    "@types/bcrypt": "^6.0.0",
    "@types/sqlite3": "^3.1.11",
    "bcrypt": "^6.0.0",
    "cors": "^2.8.5",
    "dotenv": "^17.2.2",
    "fastify": "^5.6.0",
    "js-yaml": "^4.1.0",
    "puppeteer": "^24.23.0",
    "sqlite3": "^5.1.7"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^24.3.1",
    "@types/puppeteer": "^5.4.7",
    "@types/supertest": "^6.0.3",
    "@typescript-eslint/eslint-plugin": "^8.43.0",
    "@typescript-eslint/parser": "^8.43.0",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "c8": "^10.1.3",
    "eslint": "^9.35.0",
    "nodemon": "^3.1.10",
    "pino-pretty": "^13.1.1",
    "supertest": "^7.1.4",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.2",
    "vitest": "^3.2.4"
  }
}
